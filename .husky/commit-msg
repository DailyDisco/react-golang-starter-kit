# Read the commit message
commit_msg=$(cat $1)

# Check if commit message follows conventional commit format
# Pattern: type(scope): description
if ! echo "$commit_msg" | grep -qE "^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,}"; then
  echo "❌ Invalid commit message format!"
  echo ""
  echo "Please follow conventional commit format:"
  echo "type(scope): description"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
  echo ""
  echo "Examples:"
  echo "feat: add user authentication"
  echo "fix(ui): resolve button hover state"
  echo "docs: update README installation steps"
  exit 1
fi

echo "✅ Commit message format is valid!"
