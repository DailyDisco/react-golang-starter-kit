#!/bin/bash

echo "ğŸš€ Running pre-push safety checks..."

# Function to run command in background and track PID
run_async() {
  local cmd="$1"
  local desc="$2"
  echo "ğŸ”„ Starting: $desc"
  eval "$cmd" &
  echo $!
}

# Run comprehensive tests in parallel before push
pids=()

pid=$(run_async "npm run test:frontend" "Frontend test suite")
pids+=("$pid")

pid=$(run_async "npm run test:backend" "Backend test suite")
pids+=("$pid")

# Wait for all tests to complete
echo "â³ Waiting for test results..."
failed=0
for pid in "${pids[@]}"; do
  if ! wait "$pid"; then
    failed=1
  fi
done

if [ $failed -eq 1 ]; then
  echo "âŒ Pre-push checks failed! Push blocked."
  exit 1
else
  echo "âœ… All pre-push checks passed! Safe to push."
fi
