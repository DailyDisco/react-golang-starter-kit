# Docker BuildKit Configuration
# Source this file before building: source .dockerbuildkit.env
# Or add to your shell profile (~/.bashrc, ~/.zshrc)

# Enable BuildKit for faster builds and cache mounts
export DOCKER_BUILDKIT=1
export COMPOSE_DOCKER_CLI_BUILD=1

# BuildKit progress output mode (auto, plain, tty)
export BUILDKIT_PROGRESS=auto

# Enable BuildKit inline cache for better layer caching
export BUILDKIT_INLINE_CACHE=1
